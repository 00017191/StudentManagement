head
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
section.vh-80(style='background-color: #2779e2;')
  .container.h-80
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col-xl-10
        form(method='post' action='/new')
          h1.text-white.mb-4 Add a new WIUTerian
          .card(style='border-radius: 15px;')
            .card-body
              .row.align-items-center.pt-2.pb-3
                .col-md-3.ps-5
                  h6.mb-0 First name
                .col-md-9.pe-5
                  input.form-control.form-control-lg(type='text' name='first_name')
              .row.align-items-center.pt-2.pb-3
                .col-md-3.ps-5
                  h6.mb-0 Last name
                .col-md-9.pe-5
                  input.form-control.form-control-lg(type='text' name='last_name')
              hr.mx-n3
              .row.align-items-center.py-3
                .col-md-3.ps-5
                  h6.mb-0 Email address
                .col-md-9.pe-5
                  input.form-control.form-control-lg(type='email' placeholder='example@example.com' name='email')
              hr.mx-n3
              .row.align-items-center.pt-2.pb-3
                .col-md-3.ps-5
                  h6.mb-0 Joined date
                .col-md-9.pe-5
                  input.form-control.form-control-lg(type='date' name='joined_at')
              hr.mx-n3
              .row.align-items-center.pt-2.pb-3
                .col-md-3.ps-5
                  h6.mb-0 Class number
                .col-md-9.pe-5
                  input.form-control.form-control-lg(type='text' name='class_num')
              hr.mx-n3
              .row.align-items-center.pt-2.pb-3
                .col-md-3.ps-5
                  h6.mb-0 Scholarship owner?
                .col-md-9.pe-5
                  input.form-control.form-control-lg(type='text' placeholder='Yes/No' name='scholarship')
              hr.mx-n3
              .row.align-items-center.pt-2.pb-3
                .col-md-3.ps-5
                  h6.mb-0 Status (still student or not)
                .col-md-9.pe-5
                  input.form-control.form-control-lg(type='text' placeholder='Yes/No' name='status')
          hr.mx-n3
          .col-md-9.pe-5
            button.btn.btn-light.btn-lg(type='submit') Submit
